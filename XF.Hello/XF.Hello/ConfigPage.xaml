<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Configuração"
             x:Class="XF.Hello.ConfigPage">
    <ContentPage.Content>
        <TableView>
            <TableView.Root>
                <TableSection Title="Privacidade">
                
                    <SwitchCell Text="Rastrear localização" On="{Binding Localizacao}"/>
                    <SwitchCell Text="Permitir cookies"  On="{Binding Cookies}"/>
                </TableSection>
                <TableSection Title="Desempenho">
                    <SwitchCell Text="Disponibilizar no mural"  On="{Binding Mural}"/>
                    <SwitchCell Text="Enviar por e-mail"  On="{Binding Email}"/>
                    <SwitchCell Text="Receber sms"  On="{Binding Sms}"/>
                </TableSection>
            </TableView.Root>
        </TableView>
    </ContentPage.Content>
</ContentPage>